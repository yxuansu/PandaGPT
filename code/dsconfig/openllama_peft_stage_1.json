{
  "train_batch_size": 64,
  "train_micro_batch_size_per_gpu": 2,
  "gradient_accumulation_steps": 4,
  "steps_per_print": 1,
  "gradient_clipping": 1.0,
  "zero_optimization": {
    "stage": 2,
    "contiguous_gradients": true,
    "allgather_bucket_size": 500000000,
    "allgather_partitions": true
  },
  "fp16": {
    "enabled": true,
    "opt_level": "O2",
    "min_loss_scale": 1
  },
  "bf16": {
    "enable": true
  },
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.0005,
      "betas": [
        0.9,
        0.95
      ],
      "eps": 1e-8,
      "weight_decay": 0.001
    }
  },
  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 0.0005,
      "warmup_num_steps": 10,
      "total_num_steps": 10000
    }
  }
}
